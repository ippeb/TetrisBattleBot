// Complile using the following command line:
// gcc -Wall -o test test.c -framework ApplicationServices

#include <ApplicationServices/ApplicationServices.h>
#include <time.h>
#include <delay.h>
#define LARGE 1000

int main() {
  CGEventRef mkey = CGEventCreateKeyboardEvent(NULL, (CGKeyCode)126, true);
  CGEventRef fkey = CGEventCreateKeyboardEvent(NULL, (CGKeyCode)126, false);
  CGEventPost(kCGHIDEventTap, mkey);
  nanosleep((struct timespec[]){{0, LARGE}}, NULL);
  CGEventPost(kCGHIDEventTap, fkey);
  CFRelease(mkey);
  CFRelease(fkey);
  return 0;
}
